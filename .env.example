# Data Processing
# SEARCH_COLUMNS=column1,column2,column3  # Leave empty or unset to search all columns

# Logging
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_TRACKING=true
AUTO_INDEX_FILE=data/sample_faq.csv
