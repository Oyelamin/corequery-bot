# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
BATCH_SIZE=32

# Vector Search Configuration
SIMILARITY_THRESHOLD=0.7
TOP_K_MATCHES=5

# LLM Configuration
LLM_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434
